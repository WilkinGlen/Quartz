<MudStack>
    <MudStack Row Wrap="@Wrap.Wrap">
        <MudCheckBox Value="@this.days.Mon" Label="Monday" ValueChanged="@(new EventCallback<bool>(this, MonChangedHandler))"/>
        <MudCheckBox Value="@this.days.Tue" Label="Tuesday" ValueChanged="@(new EventCallback<bool>(this, TueChangedHandler))" />
        <MudCheckBox Value="@this.days.Wed" Label="Wednesday" ValueChanged="@(new EventCallback<bool>(this, WedChangedHandler))" />
        <MudCheckBox Value="@this.days.Thu" Label="Thursday" ValueChanged="@(new EventCallback<bool>(this, ThuChangedHandler))" />
        <MudCheckBox Value="@this.days.Fri" Label="Friday" ValueChanged="@(new EventCallback<bool>(this, FriChangedHandler))" />
        <MudCheckBox Value="@this.days.Sat" Label="Saturday" ValueChanged="@(new EventCallback<bool>(this, SatChangedHandler))" />
        <MudCheckBox Value="@this.days.Sun" Label="Sunday" ValueChanged="@(new EventCallback<bool>(this, SunChangedHandler))" />
    </MudStack>
    <MudTimePicker Label="Select time for schedule" TimeChanged="@this.TimeChangedHandler" />
</MudStack>